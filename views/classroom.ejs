<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Classroom (AR/VR)</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Montserrat", sans-serif;
        background: linear-gradient(135deg, #0f0f1f 0%, #1a1a2e 100%);
      }
      .class-card {
        transition: all 0.3s ease;
      }
      .class-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 30px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body class="text-white min-h-screen flex flex-col">
    <%- include("./includes/Navbar.ejs")%>
    
    <main class="flex-grow container mx-auto px-4 py-10">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-12 uppercase tracking-wider">
        Personal Classroom <span class="text-violet-400">(AR/VR)</span>
      </h1>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <% const classes = [
          { id: '11th', name: '11th' },
          { id: '12th', name: '12th' },
          { id: '1st', name: '1st year' },
          { id: '2nd', name: '2nd year' },
          { id: '3rd', name: '3rd year' }
        ]; %>
        
        <% classes.forEach(cls => { %>
          <div
            id="<%= cls.id %>"
            class="class-card bg-gradient-to-br from-violet-500 to-violet-700 rounded-xl p-8 flex items-center justify-center cursor-pointer"
            onclick="redirect('<%= cls.id %>')"
          >
            <span class="text-2xl md:text-3xl font-semibold text-center"><%= cls.name %></span>
          </div>
        <% }); %>
      </div>
    </main>

    <script>
      function redirect(target) {
        window.location.href = `/classroom/${encodeURIComponent(target)}`;
      }
      function redirectRoadmapgen() {
        window.location.href = "/roadmap";
      }
    </script>
  </body>
</html>