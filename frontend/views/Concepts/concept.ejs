<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= concept.name %> - <%= subject.name %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <style>
      h1,
      h3 {
        text-transform: uppercase;
      }
      .montserrat {
        font-family: "Montserrat", sans-serif;
      }
      body::-webkit-scrollbar {
        display: none;
      }
    </style>
  </head>
  <body class="montserrat bg-black h-[120vh] text-white font-sans">
    <nav
      class="h-[10vh] w-full bg-black text-white flex justify-between px-10 items-center"
    >
      <h1 class="uppercase text-3xl cursor-pointer" onclick="goToHome()">
        Pre-College
      </h1>
      <div class="flex justify-center gap-20 items-center">
        <div class="flex gap-10">
          <h1 class="text-xl cursor-pointer" onclick="goToClassroom()">
            Classroom
          </h1>
          <h1 class="text-xl cursor-pointer" onclick="redirectRoadmapgen()" >Pro Roadmap</h1>
        </div>
        <div class="rounded-full h-10 overflow-hidden w-10 bg-white">
          <img
            width="24"
            height="24"
            class="h-full w-full filter-0 cursor-pointer"
            src="https://img.icons8.com/material-rounded/24/user.png"
            alt="user"
          />
        </div>
      </div>
    </nav>

    <div class="bg-blue-500 p-4 text-white text-center uppercase">
      <h1 class="text-2xl font-bold"><%= subject.name %></h1>
      <p class="text-sm font-bold">Chapter: <%= concept.name %></p>
    </div>

    <div class="bg-zinc-800 h-full w-full">
      <h2 class="text-4xl mb-4"><%= concept.title %></h2>
      <p class="mb-6"><%= concept.description %></p>

      <div class="flex justify-center flex-wrap">
        <% if (concept.models && concept.models.length > 0) { %>
          <% concept.models.forEach(function(model) { %>
          <div class="w-[70vw] flex flex-col md:w-1/2 lg:w-1/3">
            <div 
              onclick="redirectToShow('<%= model.link %>')" 
              class="bg-violet-500 flex items-center justify-center h-[15vh] w-[15vw] cursor-pointer"
            >
              <h3 class="text-xl mt-2"><%= model.name %></h3>
            </div>
          </div>
          <% }); %>
        <% } else { %>
        <p>No 3D models available for this concept.</p>
        <% } %>
      </div>
    </div>
    <script>
      function goToHome() {
        window.location.href = "/";
      }
      
      function goToClassroom() {
        window.location.href = "/classroom";
      }
      function redirectRoadmapgen(){
          window.location.href="/roadmap"
        }
      function redirectToShow(modelLink) {
        window.location.href = `/show?link=${encodeURIComponent(modelLink)}`;
      }
    </script>
  </body>
</html>
